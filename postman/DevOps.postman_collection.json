			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/blacklists/:email",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"blacklists",
						":email"
					],
					"variable": [
						{
							"key": "email",
							"value": "test-user@email.com"
						}
					]
				}
			},
			"response": []
		},
		{
